[user]
	name = jialezhang
	email = gkjiale@gmail.com
[push]
	; for git 1.8
	default = simple
[core]
	editor = vim
	quotepath = false
	pager = less -RS
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[difftool]
	prompt = false

[alias]
	st = status
	l = log --pretty=oneline -n 20 --graph --abbrev-commit
	ll = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
	la = log --color --graph --oneline --decorate --all --
	b = branch
	ci = commit -v
	ca = commit -a -v
	pl = pull
	ps = push
	co = checkout
	df = diff
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --

[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan