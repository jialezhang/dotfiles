<script type="text/javascript" src="scripts/jquery.lightbox-0.5.min.js"></script>
<link rel="stylesheet" type="text/css" href="css/jquery.lightbox-0.5.css" media="screen" />

<script type="text/javascript">
    $(function() {
        // This, or...
        $('a.lightbox').lightBox({
            containerResizeSpeed: 1
        }); // Select all links with lightbox class
    });

    /**
     * jquery.readmore - Substring long paragraphs and make expandable with "more" link
     * @date 7 July 2010
     * @author Jake Trent  http://www.jtsnake.com/
     * @version 1.1
     */
    (function($) {
        $.fn.readmore = function(settings) {

            var opts = $.extend({}, $.fn.readmore.defaults, settings);

            this.each(function() {
                $(this).data("opts", opts);
                if ($(this).html().length > opts.substr_len) {
                    abridge($(this));
                    linkage($(this));
                }
            });

            function linkage(elem) {
                elem.append(elem.data("opts").more_link);
                elem.children(".more").click(function() {
                    $(this).hide();
                    $(this).siblings("span:not(.hidden)").hide().siblings("span.hidden").animate({'opacity': 'toggle'}, 1000);
                });
            }

            function abridge(elem) {
                var opts = elem.data("opts");
                var txt = elem.html();
                var len = opts.substr_len;
                var dots = "<span>" + opts.ellipses + "</span>";
                var charAtLen = txt.substr(len, 1);
                while (len < txt.length && !/\s/.test(charAtLen)) {
                    len++;
                    charAtLen = txt.substr(len, 1);
                }
                var shown = txt.substring(0, len) + dots;
                var hidden = '<span class="hidden" style="display:none;">' + txt.substring(len, txt.length) + '</span>';
                elem.html(shown + hidden);
            }

            return this;
        };

        $.fn.readmore.defaults = {
            substr_len: 500,
            ellipses: '&#8230;',
            more_link: '  &nbsp;<a class="more" style="border-bottom:1px dashed;color:#8ECD51; cursor:pointer;">Read more → </a>'
        };

    })(jQuery);

    $(function() {
        $('#bookDescriptionBox').readmore({substr_len: 750});
    });



    // converter links
    $('.converterLink').click(function(e) {
        var el = $(e.currentTarget);
        $('#converterStatusBox').html('Идет конвертация файла. Процесс может занять от нескольких секунд до 5-7 минут в зависимости от типа и размера файла. Ссылка на файл появится в этом окне.');
        $('#converterStatusBox').css('display', 'block');
        $(el).unbind('click');

        $.ajax({
            url: 'cs2/liveconverter/',
            data: {
                'source': el.attr('source'),
                'output_format': el.attr('convertto'),
                'input_format': el.attr('origformat')
            },
            dataType: 'json',
            cache: false,
            crossDomain: true,
            success: function(resp) {
                if (resp.error) {
                    $('#converterStatusBox').html('<span class="error">' + resp.error + '</span>');
                }

                if (resp.url) {
                    $('#converterStatusBox').html('<span class="convertSuccess">Готово. Ссылка на файл  <a href="' + resp.url + '" target="_blank">' + resp.url + '</a></span>');
                }
            },
            failure: function() {
            }
        });


    });
</script>
